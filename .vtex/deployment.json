[
  {
    "name": "profile-form",
    "description": "",
    "source": "https://github.com/vtex/profile-form.git",
    "script": {
      "deploy": ".vtex/deploy.yml",
      "ci": ".vtex/ci.yml"
    },
    "build": {
      "provider": "dkcicd",
      "pipelines": [
        {
          "name": "node-ci-v2",
          "parameters": {
            "nodeCommands": ["lint", "build", "test:coverage"],
            "skipInstall": "true"
          },
          "when": [
            {
              "event": "push",
              "source": "branch"
            }
          ]
        }
      ]
    }
  }
]
